
<% let counter = 0; %>
<% for (template of templates) { %>
    <% counter++ %> 

    <div class="row mb-3">
        <div class="col-4">
            <%- include('canvas', { 
                id: `myCanvas_${counter}`, 
                columns: template.data.Columns, 
                rows: template.data.Rows, 
                rectangles: template.rectangles 
            }); %>

            
        </div>
        <div class="col-8">
            <h5><%= template.alias %></h5>
            <p class="mb-0">Created <%= moment(template.created).format('MM/DD/YY') %></p>
            <p class="mb-0">by <%= template.author %></p>
    
            <div class="d-flex justify-content-between bd-highlight mt-3">
                <button class="btn btn-gray" 
                    data-template-alias="<%= template.alias %>" 
                    data-apply-canvas-id="myCanvas_<%= counter %>">Apply</button>
                
                <button class="btn btn-gray"
                    title="Delete Template"
                    data-template-alias-delete="<%= template.alias %>">Delete</button>
            </div>
        </div>
    
    </div>

<% } %>

<% if (templates.length === 0) { %>
    <div class="row mb-3">
        <div class="col-12">
            <p style="text-align: center;">No matching templates are found!</p>
        </div>
    </div>
<% } %>